{
  "name": "@bentlusty/expenses",
  "description": "A CLI to manage your israeli expenses",
  "main": "build/cli.js",
  "bin": {
    "@bentlusty/expenses": "bin/expenses",
    "expenses": "bin/expenses"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "cli",
    "expenses"
  ],
  "files": [
    "bin/",
    "build/"
  ],
  "version": "0.0.0",
  "author": "Ben Tlusty",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node ./build/app.js",
    "dev": "ts-node src/cli.ts",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "format": "prettier --write .",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "typecheck": "tsc -b",
    "validate": "run-p test lint typecheck"
  },
  "dependencies": {
    "arg": "^5.0.2",
    "chalk": "^4.1.2",
    "inquirer": "^8.0.0",
    "israeli-bank-scrapers": "^1.14.3",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.5",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^28.1.5",
    "@types/node": "^18.0.4",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.6",
    "ts-node": "^10.9.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bentlusty/expenses.git"
  }
}
