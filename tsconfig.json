{
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "src/**/*.spec.ts"],
  "compilerOptions": {
    "outDir": "build",
    "lib": ["es2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "noImplicitAny": true
  }
}
